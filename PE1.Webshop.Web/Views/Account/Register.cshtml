@model AccountRegisterViewModel

<div class="col-lg-5 mx-auto table-bordered m-4 p-4">
    <h2>Registration</h2>
    <form asp-controller="Account" asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="alert text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="alert text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="alert text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="alert text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="alert text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordCheck"></label>
            <input asp-for="PasswordCheck" class="form-control" />
            <span asp-validation-for="PasswordCheck" class="alert text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
        <a asp-controller="Account" asp-action="Login">I already have an account</a>
    </form>
</div>
