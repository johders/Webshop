@model ShoppingCartViewModel

<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="text-left logo p-2 px-5">
                    <img asp-append-version="true" src="/images/logo-banner.jpg" width="150" height="40" class="d-inline-block align-top" alt="Company Logo">
                </div>
                <div class="invoice p-5">
                    <h5>Order Confirmed!</h5>

                    <span class="font-weight-bold d-block mt-4">Hello, Bart</span>
                    <span>You order has been confirmed and will be shipped in the next two days!</span>

                    <div class="payment border-top mt-3 mb-3 border-bottom table-responsive">

                        <table class="table table-borderless">

                            <tbody>
                                <tr>
                                    <td>
                                        <div class="py-2">
                                            <span class="d-block text-muted">Order Date</span>
                                            <span>@DateTime.Now.ToString("D")</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="py-2">
                                            <span class="d-block text-muted">Order No</span>
                                            <span>MT12332345</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="py-2">
                                            <span class="d-block text-muted">Payment</span>
                                            <span><img src="https://img.icons8.com/color/48/000000/mastercard.png" width="20" /></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="py-2">
                                            <span class="d-block text-muted">Shiping Address</span>
                                            <span>Limburg, Belgium</span>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="product border-bottom table-responsive">
                        <table class="table table-borderless">
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td width="20%">
                                            <img asp-append-version="true" src="@item.Coffee.ImageString" alt="Product Image" width="90">
                                        </td>
                                        <td width="60%">
                                            <span class="font-weight-bold">@item.Coffee.Name</span>
                                            <div class="product-qty">
                                                <span class="d-block">Quantity: @item.Quantity</span>
                                                <span>@item.Coffee.Origin</span>
                                            </div>
                                        </td>
                                        <td width="20%">
                                            <div class="text-right">
                                                <span class="font-weight-bold">$@item.ItemsTotal</span>
                                            </div>
                                        </td>
                                    </tr>
                                }
                             </tbody>
                        </table>
                    </div>
                    <div class="row d-flex justify-content-end">
                        <div class="col-md-5">
                            <table class="table table-borderless">
                                <tbody class="totals">
                                    <tr>
                                        <td>
                                            <div class="text-left">

                                                <span class="text-muted">Subtotal</span>

                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-right">
                                                <span>$@Model.SubTotal</span>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="text-left">
                                                <span class="text-muted">Shipping Fee</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-right">
                                                <span>$@Model.Shipping</span>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr class="border-top border-bottom">
                                        <td>
                                            <div class="text-left">

                                                <span class="font-weight-bold">Total</span>

                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-right">
                                                <span class="font-weight-bold">$@Model.TotalPrice</span>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <p>We will be sending a shipping confirmation email when the item shipped successfully!</p>
                    <p class="font-weight-bold mb-0">Thanks for shopping with us!</p>
                    <small>Pachamama Farmers, @DateTime.Now.ToString("D")</small><br></br>
                    <a asp-controller="ShoppingCart" asp-action="ClearCart" type="button" class="btn btn-sm btn-outline-secondary">
                        Go Home
                    </a>
                </div>               
            </div>
        </div>
    </div>
</div>

