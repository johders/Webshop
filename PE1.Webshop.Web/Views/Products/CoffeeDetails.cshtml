@model ProductsCoffeeDetailsViewModel

<div class="container px-4 px-lg-5 my-5">
	<div class="row gx-4 gx-lg-5 align-items-center" id="container-rel">
		<div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" asp-append-version="true" src="@Model.ImageString" alt="Product Image" /></div>
		<div class="col-md-6 h-link">
			@if (Model.CertifiedOrganic)
			{
				<div id="absolute-organic">
					<img src="/images/cert.png" width="100" height="100" class="d-inline-block align-top" alt="">
				</div>
			}
			<h1 class="display-5 fw-bolder">@Model.Name</h1>
			<div class="fs-5 mb-5">
				<span>$@Model.Price</span>
			</div>
			<p class="lead">@Model.Description</p>

			<p>Roast: <a asp-area="" asp-controller="Products" asp-action="FilteredByCategory" asp-route-id="@Model.Category.Id" asp-route-slug="@Model.Category.Name">@Model.Category.Name</a></p>
			<p>
				Characteristics:


				@foreach (var p in Model.Properties)
				{
					<a asp-area="" asp-controller="Products" asp-action="FilteredByProperty" asp-route-id="@p.Id" asp-route-slug="@p.Name"><span>@p.Name</span></a>

				}
			</p>
			<p>Origins: @Model.Origin</p>
			<div class="d-flex">
				<a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@Model.Id" type="button" class="btn btn-sm btn-outline-secondary">
					Add to cart
				</a>
			</div>
		</div>
	</div>
</div>


