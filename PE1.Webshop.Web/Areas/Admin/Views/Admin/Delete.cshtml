<div class="container px-4 px-lg-5 my-5">
	<div class="row gx-4 gx-lg-5 align-items-center">
		<div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" asp-append-version="true" src="~/images/sku-10.webp" alt="Product Image" /></div>
		<div class="col-md-6 h-link" id="volunteer-form">

			<form method="post" asp-action="DeletePost">
				<input asp-for="Id" hidden />

				<div class="form-group">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" disabled></input>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Description"></label>
					<textarea asp-for="Description" class="form-control" disabled></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Origin"></label>
					<input asp-for="Origin" class="form-control" disabled></input>
					<span asp-validation-for="Origin" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Price"></label>
					<input asp-for="Price" class="form-control" disabled></input>
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>

				<hr class="mx-n1">

				<div class="form-group form-check">

					<input asp-for="CertifiedOrganic" class="form-check-input" disabled>
					<label asp-for="CertifiedOrganic" class="form-check-label" ></label>
					<span asp-validation-for="CertifiedOrganic" class="text-warning d-block"></span>

				</div>
				<hr class="mx-n1">
				<div class="mb-3">

					@* <h5>Coffee Properties</h5> *@
					<label asp-for="Properties"></label>
					<select asp-for="SelectedPropertyIdList" asp-items="Model.PropertyOptions" multiple="multiple" disabled id="selectList"></select>
					<span asp-validation-for="SelectedPropertyIdList" class="text-warning d-block"></span>

					<div class="property-options">
						
						<table>

							@foreach (var flavor in Model.Properties)
							{
								<tr>
									<td class="text-muted small">@flavor.Name</td>
								</tr>
							}


						</table>

					</div>

				</div>

				<button type="submit" class="btn btn-danger" style="width: 150px"><i class="bi bi-trash"></i> Delete</button>
				<a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back to List</a>
			</form>
		</div>
	</div>
</div>

