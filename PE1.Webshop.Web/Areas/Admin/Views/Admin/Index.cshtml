@model ProductsAllCoffeesViewModel

<h1>Index</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Admin" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; New Product</a>
        </div>
    </div>
    <br /><br />


<table class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th>
                Product Id
            </th>
            <th>
                Product Name
            </th>
                <th>
                   
                </th>
             
        </tr>

    </thead>
    <tbody>
        @foreach(var coffee in Model.AllCoffees)
        {
            <tr>
                <td width="50%">
                        @coffee.Id
                </td>
          
                <td width="30%">
                        @coffee.Name
                </td>
                    <td>
                       <div class="w-75 btn-group" role="group">
                            <a asp-area="Admin" asp-controller="Admin" asp-action="Edit" asp-route-id="@coffee.Id"
                            class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>

                            <a asp-area="Admin" asp-controller="Admin" asp-action="Delete" asp-route-id="@coffee.Id"
                               class="btn btn-danger mx-2"><i class="bi bi-pencil-square"></i>Delete</a>
                       </div>
                    </td>
                   
            </tr>
        }
    </tbody>

</table>
</div>